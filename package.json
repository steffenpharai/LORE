{
  "name": "lore-machine",
  "version": "0.1.0",
  "private": true,
  "description": "Decentralized collaborative lore generator for Base/Farcaster tokens",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm -r test",
    "contracts:test": "pnpm --filter contracts test",
    "contracts:compile": "pnpm --filter contracts compile"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "eslint": "^8.57.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

