# Base Environment
# Use 'staging' for Base Sepolia (testnet, chain ID: 84532)
# Use 'prod' for Base Mainnet (chain ID: 8453)
BASE_ENV=staging
# BASE_ENV=prod

# Supabase Database
# Prisma uses DATABASE_URL - use POSTGRES_PRISMA_URL (with pgbouncer) for migrations
DATABASE_URL=postgres://postgres.PROJECT_REF:YOUR_PASSWORD@aws-1-us-east-1.pooler.supabase.com:6543/postgres?sslmode=require&pgbouncer=true
POSTGRES_PRISMA_URL=postgres://postgres.PROJECT_REF:YOUR_PASSWORD@aws-1-us-east-1.pooler.supabase.com:6543/postgres?sslmode=require&pgbouncer=true
POSTGRES_URL=postgres://postgres.PROJECT_REF:YOUR_PASSWORD@aws-1-us-east-1.pooler.supabase.com:6543/postgres?sslmode=require&supa=base-pooler.x
POSTGRES_URL_NON_POOLING=postgres://postgres.PROJECT_REF:YOUR_PASSWORD@aws-1-us-east-1.pooler.supabase.com:5432/postgres?sslmode=require
POSTGRES_USER=postgres
POSTGRES_HOST=db.PROJECT_REF.supabase.co
POSTGRES_PASSWORD=YOUR_PASSWORD
POSTGRES_DATABASE=postgres

# Supabase API
SUPABASE_URL=https://PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Redis (Optional - for future async queue processing with BullMQ)
# For MVP, Redis is not required. Leave empty or use a free Redis service like:
# - Upstash Redis (free tier): https://upstash.com
# - Redis Cloud (free tier): https://redis.com/try-free
# - Or run locally: redis://localhost:6379
REDIS_URL=

# Neynar API (Free tier available)
# Free tier includes: Basic API access with rate limits
# Get your API key at: https://neynar.com
# Note: Free tier has rate limits - consider upgrading for production
NEYNAR_API_KEY=your_neynar_api_key_here

# Base Paymaster (for gas sponsorship)
# Base Paymaster supports both Sepolia and Mainnet
BASE_PAYMASTER_URL=https://paymaster.base.org

# MiniKit Configuration (from Base MiniKit)
# Project ID is ONLY required if using Coinbase Onramp (buy crypto functionality)
# Leave empty if not using Onramp features
NEXT_PUBLIC_MINIKIT_PROJECT_ID=
# Set to 'staging' for Base Sepolia (84532), 'prod' for Base Mainnet (8453)
NEXT_PUBLIC_BASE_ENV=staging

# RPC Endpoints
# Base Sepolia (testnet) - Chain ID: 84532
ALCHEMY_BASE_RPC=https://sepolia.base.org
# Alternative Base Sepolia RPC (Alchemy): https://base-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# For Base Mainnet (production): https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# JWT Authentication
# Can use SUPABASE_JWT_SECRET or set a separate JWT_SECRET
JWT_DOMAIN=loremachine.app
JWT_SECRET=your_jwt_secret_here

# Vercel
VERCEL_ENV=production

# App Configuration
STORY_LINE_CAP=100
VOTE_THRESHOLD=100
MAX_LINES_PER_DAY_PER_FID=5

# Clanker Token Configuration (Phase 3)
# Set these after deploying $LORE token via Clanker.World UI
# Token contract address from Clanker deployment
LORE_TOKEN_ADDRESS=
# Chain ID: 8453 for Base Mainnet, 84532 for Base Sepolia
LORE_TOKEN_CHAIN_ID=84532
# Token name and symbol
LORE_TOKEN_NAME=LORE Token
LORE_TOKEN_SYMBOL=LORE
# Optional: Clanker token ID (if available from Clanker)
LORE_TOKEN_CLANKER_ID=
# Optional: Liquidity pool address
LORE_TOKEN_LIQUIDITY_POOL=
# Deployment timestamp (ISO format)
LORE_TOKEN_DEPLOYED_AT=
# Set to 'true' when token is deployed and ready
LORE_TOKEN_IS_ACTIVE=false

